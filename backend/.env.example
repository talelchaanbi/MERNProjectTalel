# MongoDB Atlas connection
MONGO_URI=mongodb+srv://<user>:<password>@<cluster>/<db>?retryWrites=true&w=majority
MONGO_DB_NAME=mernproject

# Sessions
SESSION_SECRET=change_me_to_a_long_random_string
SESSION_MAX_AGE_HOURS=6

# App
NODE_ENV=production
# Azure will provide PORT automatically; keep for local overrides
PORT=4500

# IMPORTANT for Azure App Service:
# - App Service terminates HTTPS at the edge; run HTTP in the Node app.
HTTPS_ENABLED=false

# Optional (development only)
HTTPS_KEY_PATH=certs/server.key
HTTPS_CERT_PATH=certs/server.crt

# Optional: only clears sessions when true AND not production
CLEAR_SESSIONS_ON_STARTUP=false
